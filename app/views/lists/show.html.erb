<div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, crop: :fill if @list.photo.attached? %>)">
  <h1><%= @list.name %></h1>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <p><%= link_to "Add a comment", new_list_bookmark_path(@list), class: "btn btn-gradient" %></p>
  </div>

<div class="d-flex align-items-center justify-content-between mb-3">
<% @list.movies.each do |movie| %>
<div class="card-trip">
<%= image_tag movie.poster_url %>
  <div class="card-trip-infos">
    <div>
      <h2><%= movie.title %> ( <%= movie.rating %> <i class="fas fa-star"></i> )</h2>
      <p><%= movie.overview %></p>
      <% end %>
    </div>
  </div>
  </div>
</div>

  <%= link_to "Back", root_path, class: "btn btn-ghost" %>
</div>
