<h1><%= @list.name %></h1>

<p><%= link_to "Add a comment", new_list_bookmark_path(@list) %></p>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><h3><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> </h3>
    <%= bookmark.movie.overview %>
