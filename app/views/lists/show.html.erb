<div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, crop: :fill if @list.photo.attached? %>)">
  <h1><%= @list.name %></h1>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <p><%= link_to "Add a comment", new_list_bookmark_path(@list), class: "btn btn-gradient" %></p>
  </div>

  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li><h3><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> </h3>
      <%= bookmark.movie.overview %>
      <p>"<%= bookmark.comment %>"</p>
    <% end %>
  </ul>

  <%= link_to "Back", root_path, class: "btn btn-ghost" %>
</div>
